package com.jsp.multipanefragments;

import android.app.Fragment;
import android.os.Bundle;
import android.util.Log;
import android.view.LayoutInflater;
import android.view.View;
import android.view.ViewGroup;
import android.webkit.WebView.FindListener;
import android.widget.TextView;

public class Description_Versions extends Fragment {
	
TextView descriptiontv;
	
	@Override
		public void onActivityCreated(Bundle savedInstanceState) {
			super.onActivityCreated(savedInstanceState);
			
		}
	
	@Override
		public void onStart() {
		super.onStart();
			Bundle args = getArguments();
			
			if(args!=null)
			{
				changedescription(args.getInt("position"));
			}
			
		}

    @Override
	public View onCreateView(LayoutInflater inflater, ViewGroup container,
			Bundle savedInstanceState) {
		

    	View v =  inflater.inflate(R.layout.description_fragment,container,false);
    	descriptiontv =(TextView) v.findViewById(R.id.textView1);
    	return v;
		
	}
    
	
	public void changedescription(int position) 
	{
		String[]description = {"this is 1","this is 2","this is 3","this is 4"};
		Log.d("Position---->>>", "the position is "+position);
		descriptiontv.setText(description[position]);
	}

}
